{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../lts/postProcesses/generated",
        "declaration": true,
        "importHelpers": true,
        "target": "ES2018",
        "plugins": [{ "transform": "@dev/build-tools/dist/pathTransform.js", "buildType": "es6", "basePackage": "@babylonjs/post-processes", "appendJS": true }],
        "paths": {
            "core/*": ["lts/core/dist/*"],
            "post-processes/*": ["lts/postProcesses/generated/*"]
        }
    },

    "include": ["../../../lts/postProcesses/generated/**/*"]
}
