{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../lts/loaders/generated",
        "declaration": true,
        "importHelpers": true,
        "target": "ES2018",
        "plugins": [
            { "transform": "@dev/build-tools/dist/pathTransform.js", "buildType": "es6", "basePackage": "@babylonjs/loaders", "appendJS": true },
        ],
        "paths": {
            "core/*": ["lts/core/dist/*"],
            "loaders/*": ["lts/loaders/generated/*"]
        }
    },

    "include": ["../../../lts/loaders/generated/**/*"]
}
