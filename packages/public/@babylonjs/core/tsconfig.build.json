{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../lts/core/generated",
        "declaration": true,
        "target": "ES2017",
        "importHelpers": true,
        "plugins": [
            { "transform": "@dev/build-tools/dist/pathTransform.js", "buildType": "es6", "basePackage": "@babylonjs/core", "appendJS": true },
        ],
        "paths": {
            "core/*": ["lts/core/generated/*"],
        }
    },

    "include": ["../../../lts/core/generated/**/*"]
}
